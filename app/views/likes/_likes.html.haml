- if user_signed_in?
  - if @prototype.likes.exists?(user_id: current_user.id)
    = button_to prototype_like_path(prototype_id: @prototype.id, id: @likes.id), method: :delete, class: "btn btn-default", remote: true do
      = image_tag("icon_heart_red.svg", id: "icon")
      like
      %span.num #{like_count}
  - else
    = button_to prototype_likes_path(@prototype.id), method: :post, class: "btn btn-default", remote: true do
      = image_tag("icon_heart.svg", id: "icon")
      like
      %span.num #{like_count}
- else
  = button_to new_user_session_path, class: "btn btn-default" do
    = image_tag("icon_heart.svg")
    like
    %span.num #{like_count}

