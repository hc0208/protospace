.container.proto-page
  %header.row.user-nav
    .col-md-6
      .media
        .media-left
          %a{:href => "#"}
            %img.media-object{:alt => "64x64", "data-holder-rendered" => "true", "data-src" => "holder.js/64x64", :src => "", :style => "width: 64px; height: 64px;"}/
        .media-body
          %h4#top-aligned-media.media-heading
            #{@prototype.title}
          .proto-user
            %a{:href => ""} by #{@prototype.user.name}
            %span.degree we-b inc. Designer

    .col-md-6.text-right#like
      = render "likes/likes"
  .row
    .col-md-9
      = image_tag("#{@prototype.thumbnails.main.first.image}", :class => 'img-responsive')
    .col-md-3
      %ul.proto-sub-list.list-group
        %li.list-group-item
          = image_tag("sample.png", :class => 'img-responsive')
        %li.list-group-item
          = image_tag("sample.png", :class => 'img-responsive')
        %li.list-group-item
          = image_tag("sample.png", :class => 'img-responsive')
  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      %p #{@prototype.catchcopy}
    .col-md-6
      %h4 Concept
      %p #{@prototype.concept}
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        %li
          %a{:href => "#", :class => "btn btn-default"} iPad
        %li
          %a{:href => "#", :class => "btn btn-default"} wireframe
  .row.proto-comments
    %h4.col-md-12
      Comments
      %span.num (10)
    .col-md-8
      #comments
        = render partial: "comments/comment", collection: @prototype.comments
      = form_for [@prototype, @comment], class: "form-inline", role: "form", remote: true do |f|
        %h4 Write a comment
        .row
          .form-group.col-md-10
            =f.text_area :text, rows: "3", placeholder: "Your comments", class: "form-control"
          .form-group.col-md-2
            =f.submit "Comment", class: "btn btn-primary"

