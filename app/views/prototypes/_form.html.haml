= render 'partials/validation_errors', instance: @prototype
= form_for(@prototype, html: {class: "container proto-new"}) do |f|
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        = f.text_field :title, placeholder: "Title"
    .row
      .col-md-12
        .cover-image-upload
          = f.fields_for :thumbnails, @prototype.decorate.mainrole do |i|
            = i.file_field :image
            = image_tag '', id: "main_preview"
            = i.hidden_field :role, value: :main
      .col-md-12
        %ul.proto-sub-list.list-group
          - 2.times do |num|
            %li.list-group-item.col-md-4
              .image-upload
                = f.fields_for :thumbnails, @prototype.decorate.subrole do |i|
                  = i.file_field :image
                  = image_tag '', id: "sub_#{num}_preview"
                  = i.hidden_field :role, value: :sub
          %li.list-group-item.col-md-4
            .image-upload-plus
              %span +
    .row.proto-description
      .col-md-12
        = f.text_field :catchcopy, placeholder:"Catch Copy"
      .col-md-12
        = f.text_area :concept, cols: "30", rows: "4", placeholder: "Concept"
      .col-md-12
        %h4 Tag List
        .row
          - 3.times do |num|
            .col-md-3
              = text_field_tag 'prototype[tag_list][]', @prototype.decorate.fetch_tag(num), placeholder: placeholder[num]
    .row.text-center.proto-btn
      = f.submit submit_text, class: "btn btn-lg btn-primary btn-block"
