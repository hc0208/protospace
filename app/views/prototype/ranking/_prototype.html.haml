.col-sm-4.col-md-3.proto-content
  .thumbnail{style: "position: relative"}
    = link_to image_tag prototype.thumbnails.main.first.image
    %li.dropdown.btn.btn-default{style: "position: absolute; top: 5px; left: 3px;"}
      %a.dropdown-toggle{aria: {expanded: "false"}, data: {toggle: "dropdown"}, href: "#", role: "button"}
        = "action"
      %ul.dropdown-menu{:role => "menu"}
        %li
          =link_to "Delete"
        %li
          =link_to "Edit"
    .caption
      %h3 #{prototype.title}
      .proto-meta
        .proto-user
          = link_to "by #{prototype.user.name}"
        .proto-posted
          #{prototype.created_at.strftime("%Y年%m月%d日")}
      %ul.proto-tag-list.list-inline
        %li
          = link_to "iPad","#", class: "btn btn-default"
        %li
          = link_to "wireframe","#", class: "btn btn-default"

