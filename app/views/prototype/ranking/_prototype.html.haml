.col-sm-4.col-md-3.proto-content
  .thumbnail{style: "position: relative"}
    = link_to image_tag(prototype.thumbnails.main.first.try(:image)), prototype_path(prototype.id)
    -if user_signed_in? && current_user.id == prototype.user_id
      %li.dropdown.btn.btn-default{style: "position: absolute; top: 5px; left: 3px;"}
        %a.dropdown-toggle{aria: {expanded: "false"}, data: {toggle: "dropdown"}, href: "#", role: "button"}
          = "action"
        %ul.dropdown-menu{role: :menu}
          %li
            = link_to "Delete", prototype_path(prototype.id), method: :delete
          %li
            = link_to "Edit", edit_prototype_path(prototype.id)
    .caption
      %h3 #{prototype.title}
      .proto-meta
        .proto-user
          = link_to "by #{prototype.user.name}", user_path(prototype.user.id)
        .proto-posted
          #{prototype.created_at.strftime("%Y年%m月%d日")}
      %ul.proto-tag-list.list-inline
        - prototype.label_list.each do |label|
          %li
            = link_to "#{label}", tag_path(label), class: "btn btn-default"
